<UserControl x:Class="MoneyFox.Uwp.Views.Settings.RegionalSettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:i="using:Microsoft.Xaml.Interactivity"
             xmlns:resources="using:MoneyFox.Application.Resources"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             DataContext="{Binding RegionalSettingsVm, Source={StaticResource Locator}}">

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadAvailableCurrenciesCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <StackPanel>
        <TextBlock Text="{x:Bind resources:Strings.DefaultCurrencyText}"
                   Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                   TextWrapping="WrapWholeWords" />

        <ComboBox ItemsSource="{x:Bind ViewModel.AvailableCurrencies}"
                  Header="{x:Bind resources:Strings.DefaultCurrencyHeader}"
                  DisplayMemberPath="Id"
                  HorizontalAlignment="Stretch">
        </ComboBox>
    </StackPanel>

</UserControl>
