<UserControl x:Class="MoneyFox.Uwp.Views.UserControls.PaymentListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="using:MoneyFox.Uwp.Converter"
             xmlns:designTime="using:MoneyFox.Presentation.ViewModels.DesignTime"
             x:Name="PaymentControl"
             xmlns:resources="using:MoneyFox.Application.Resources"
             xmlns:controls="using:MoneyFox.Uwp.Views.UserControls"
             xmlns:viewModels="using:MoneyFox.Presentation.ViewModels"
             d:DataContext="{d:DesignInstance designTime:DesignTimePaymentListViewModel,
                                              IsDesignTimeCreatable=True}"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converter:PaymentAmountConverter x:Key="PaymentViewModelAmountConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converter:ClickConverter x:Key="ClickConverter" />

        <DataTemplate x:Key="GroupHeaderTemplate">
            <Border Background="Transparent" Padding="3">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                           Margin="{StaticResource MediumLeftRightMargin}"
                           FontSize="{StaticResource MediumFontSize}"
                           Foreground="{StaticResource SystemControlHighlightAccentBrush}"
                           Text="{Binding Key}" />
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="JumpTemplate">
            <Border>
                <Border Margin="5" HorizontalAlignment="Left">
                    <TextBlock HorizontalAlignment="Left"
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource MediumFontSize}"
                               Foreground="{StaticResource SystemControlHighlightAccentBrush}"
                               Text="{Binding Group.Key}" />
                </Border>
            </Border>
        </DataTemplate>

        <CollectionViewSource x:Key="Groups"
                              IsSourceGrouped="True"
                              Source="{Binding Source}" />
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:BalanceControl Grid.Row="0"
                                 DataContext="{Binding BalanceViewModel}"
                                 Margin="{StaticResource MediumLeftRightMargin}" />

        <SemanticZoom Grid.Row="1" Margin="{StaticResource NegativeMediumLeftRightMargin}">
            <SemanticZoom.ZoomedInView>
                <ListView IsItemClickEnabled="False"
                          ItemsSource="{Binding Source={StaticResource Groups}}"
                          x:Name="PaymentListView"
                          SelectionMode="None"
                          Loaded="PaymentListView_OnLoaded"
                          Background="Transparent">

                    <ListView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource GroupHeaderTemplate}" HidesIfEmpty="True" />
                    </ListView.GroupStyle>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,30"
                                        Padding="{StaticResource SmallListItemPadding}">

                                <TextBlock Margin="3,0,0,7"
                                           Style="{ThemeResource HeaderStyle}"
                                           Text="{Binding Key}" />

                                <ListView HorizontalAlignment="Stretch"
                                          Margin="{StaticResource NegativeMediumLeftRightMargin}"
                                          Background="Transparent"
                                          IsItemClickEnabled="True"
                                          IsSynchronizedWithCurrentItem="False"
                                          ItemsSource="{Binding}"
                                          ItemClick="ListView_ItemClick"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          ShowsScrollingPlaceholders="false">

                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>

                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="viewModels:PaymentViewModel">
                                            <Grid MinWidth="100"
                                                  Margin="{StaticResource NegativeMediumLeftRighWithSmallToptMargin}"
                                                  Padding="{StaticResource SmallListItemPadding}"
                                                  Background="{ThemeResource ListItemBrush}"
                                                  HorizontalAlignment="Stretch">

                                                <Grid.ContextFlyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem Icon="Edit"
                                                                        Command="{x:Bind EditPaymentCommand}"
                                                                        CommandParameter="{x:Bind}"
                                                                        Text="{x:Bind resources:Strings.EditLabel}" />

                                                        <MenuFlyoutItem Icon="Delete"
                                                                        Command="{x:Bind DeletePaymentCommand}"
                                                                        CommandParameter="{x:Bind}"
                                                                        Text="{x:Bind resources:Strings.DeleteLabel}" />
                                                    </MenuFlyout>
                                                </Grid.ContextFlyout>

                                                <Grid Margin="{StaticResource MediumLeftRightMargin}">
                                                    <StackPanel VerticalAlignment="Center"
                                                                Orientation="Vertical">
                                                        <TextBlock HorizontalAlignment="Stretch"
                                                                   Text="{x:Bind Category.Name}" />
                                                        <TextBlock MaxWidth="150"
                                                                   MaxLines="1"
                                                                   Style="{ThemeResource DeemphasizedBodyTextBlockStyle}"
                                                                   Text="{x:Bind Note}"
                                                                   TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>
                                                    <StackPanel HorizontalAlignment="Right"
                                                                Orientation="Vertical">
                                                        <TextBlock
                                                            Text="{Binding Converter={StaticResource PaymentViewModelAmountConverter}, ConverterParameter={Binding AccountId, ElementName=PaymentControl}}" />

                                                        <StackPanel HorizontalAlignment="Right"
                                                                    Orientation="Horizontal">
                                                            <Grid HorizontalAlignment="Right"
                                                                  Visibility="{x:Bind IsTransfer, Converter={StaticResource BooleanToVisibilityConverter}}">

                                                                <Viewbox MaxWidth="15" MaxHeight="15">
                                                                    <SymbolIcon Width="20"
                                                                                Height="20"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Symbol="Switch" />
                                                                </Viewbox>

                                                            </Grid>
                                                            <Grid HorizontalAlignment="Right"
                                                                  Margin="6,0,0,0"
                                                                  Visibility="{x:Bind IsRecurring, Converter={StaticResource BooleanToVisibilityConverter}}">

                                                                <Viewbox MaxWidth="15" MaxHeight="15">
                                                                    <SymbolIcon HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Symbol="Reshare" />
                                                                </Viewbox>

                                                            </Grid>
                                                            <Grid HorizontalAlignment="Right"
                                                                  Margin="6,0,0,0"
                                                                  Visibility="{x:Bind IsCleared, Converter={StaticResource BooleanToVisibilityConverter}}">

                                                                <Viewbox MaxWidth="15" MaxHeight="15">
                                                                    <SymbolIcon HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Symbol="Accept" />
                                                                </Viewbox>
                                                            </Grid>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>

                                    </ListView.ItemTemplate>

                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <GridView Margin="12"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          ItemTemplate="{StaticResource JumpTemplate}"
                          ItemsSource="{Binding Source={StaticResource Groups},
                                                Path=CollectionGroups}">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VariableSizedWrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>

        <TextBlock Grid.Row="1"
                   Text="{x:Bind resources:Strings.NoPaymentsMessage}"
                   Margin="6"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource SystemBaseMediumLowColor}"
                   Style="{ThemeResource DeemphasizedBodyTextBlockStyle}"
                   TextWrapping="Wrap"
                   Visibility="{Binding IsPaymentsEmpty,
                                        Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>