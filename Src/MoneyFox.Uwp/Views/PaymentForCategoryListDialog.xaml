<ContentDialog
    x:Class="MoneyFox.Uwp.Views.PaymentForCategoryListDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="using:MoneyFox.Application.Resources"
    xmlns:usercontrols="using:MoneyFox.Uwp.Views.UserControls"
    Title="{x:Bind resources:Strings.PaymentsForCategoryTitle}"
    DataContext="{Binding PaymentForCategoryListVm, Source={StaticResource Locator}}"
    PrimaryButtonText="{x:Bind resources:Strings.DoneLabel}"
    mc:Ignorable="d">

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid>
        <usercontrols:PaymentListUserControl />
    </Grid>
</ContentDialog>
