<ContentDialog
    x:Class="MoneyFox.Uwp.Views.PaymentForCategoryListDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="using:MoneyFox.Application.Resources"
    xmlns:usercontrols="using:MoneyFox.Uwp.Views.UserControls"
    Title="{x:Bind resources:Strings.PaymentsForCategoryTitle}"
    DataContext="{Binding PaymentForCategoryListVm, Source={StaticResource Locator}}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="{x:Bind resources:Strings.DoneLabel}"
    mc:Ignorable="d">

    <Grid>
        <usercontrols:PaymentListUserControl />
    </Grid>
</ContentDialog>
