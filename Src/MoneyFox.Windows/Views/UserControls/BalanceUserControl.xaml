<userControls:MyBalanceUserControl 
             x:Class="MoneyFox.Windows.Views.UserControls.BalanceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:MoneyFox.Windows.Views.UserControls"
             d:DesignHeight="50"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <TextBlock x:Uid="TotalLabel"
                   Margin="0,0,5,10"
                   Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                   Text="Total: " />
        <TextBlock x:Name="TotalBalance" 
                   Margin="0,0,5,0"
                   Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                   Text="1235" />
        <TextBlock Margin="0,0,5,0"
                   Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                   Text=" / " />
        <TextBlock x:Name="EndOfMonthBalance" 
                   Margin="0,0,5,0"
                   Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                   Text="4232"/>
    </StackPanel>
</userControls:MyBalanceUserControl>