<local:MyModifyPaymentUserControl
    x:Class="MoneyFox.Windows.Views.UserControls.ModifyPaymentUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyFox.Windows.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:MoneyFox.ServiceLayer.ViewModels"
    xmlns:converter="using:MoneyFox.Windows.Converter"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <converter:AmountFormatConverter x:Key="AmountConverter" />
        <converter:RecurrenceTypeConverter x:Key="RecurrenceTypeConverter" />

        <DataTemplate x:Key="ComboBoxAccountTemplate" x:DataType="viewModels:AccountViewModel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Bind Name}" />
                <TextBlock Text=" (" />
                <TextBlock Text="{x:Bind CurrentBalance, Converter={StaticResource AmountConverter}}" />
                <TextBlock Text=")" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ComboBoxRecurrenceTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Converter={StaticResource RecurrenceTypeConverter}}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ComboBox x:Name="ComboBoxChargedAccount" Margin="{StaticResource SmallTitleContentMargin}"
                          HorizontalAlignment="Stretch"
                          ItemTemplate="{StaticResource ComboBoxAccountTemplate}">
                </ComboBox>

                <ComboBox x:Name="ComboBoxTargetAccount" Margin="{StaticResource SmallTitleContentMargin}"
                          HorizontalAlignment="Stretch"
                          ItemTemplate="{StaticResource ComboBoxAccountTemplate}">
                </ComboBox>
                <TextBox x:Name="AmountTextBox" 
                         Margin="{StaticResource SmallTitleContentMargin}"
                         InputScope="Number"
                         TextAlignment="Right" />
                <Grid Margin="{StaticResource SmallTitleContentMargin}">
                    <TextBox x:Name="CategoryTextBox"  
                             IsReadOnly="True" />
                    <Image x:Name="CancelImage" 
                           Height="30"
                           Margin="0,0,0,0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Source="/Assets/IconCancel.png">
                    </Image>
                </Grid>
                <DatePicker x:Name="PaymentDatePicker" 
                            Margin="{StaticResource SmallTitleContentMargin}"
                            HorizontalAlignment="Left" />
                <TextBox x:Name="NoteTextBox" 
                         Margin="{StaticResource SmallTitleContentMargin}"
                         TextWrapping="Wrap" />
                <!--  We set the binding as OneTime and update the value in the code behind to ensure that it is visible when the animation plays  -->
                <ToggleSwitch x:Name="RecurringSwitch"  Margin="{StaticResource SmallTitleContentMargin}"
                              VerticalAlignment="Stretch"
                              Toggled="ToggleRecurringVisibility" />
                <StackPanel x:Name="RecurringStackPanel" Loaded="SetVisibilityInitially">
                    <ComboBox x:Name="RecurrenceComboBox"  HorizontalAlignment="Stretch"
                              Margin="{StaticResource SmallTitleContentMargin}"
                              ItemTemplate="{StaticResource ComboBoxRecurrenceTemplate}" />
                    <CheckBox x:Name="EndlessCheckBox"
                              Margin="{StaticResource SmallTitleContentMargin}"/>
                    <DatePicker x:Name="EndDatePicker"  
                                Margin="{StaticResource SmallTitleContentMargin}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</local:MyModifyPaymentUserControl>
