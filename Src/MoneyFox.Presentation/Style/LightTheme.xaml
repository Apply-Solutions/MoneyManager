<?xml version="1.0" encoding="utf-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="MoneyFox.Presentation.Style.LightTheme">

    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#FFFF8671</Color>
    <Color x:Key="SecondaryAccentColor">#FFFFBD5E</Color>
    <Color x:Key="PrimaryColor">#FF314A9B</Color>
    <Color x:Key="SecondaryColor">#FF00165A</Color>

    <!-- Control Colors -->
    <Color x:Key="WindowBackgroundColor">#EFF2F5</Color>
    <Color x:Key="DialogBackgroundColor">White</Color>
    <Color x:Key="BottomTabBarColor">White</Color>
    <Color x:Key="BarItemColor">White</Color>
    <Color x:Key="BarSelectedItemColor">#314a9b</Color>
    <Color x:Key="FrameHighlightColor">White</Color>
    <Color x:Key="ButtonBackgroundColor">#bfc2c4</Color>
    <Color x:Key="AppBarColor">#314a9b</Color>
    <Color x:Key="AppBarFontColorColor">White</Color>

    <!-- Font Colors -->
    <Color x:Key="InvertedPrimaryFontColor">White</Color>
    <Color x:Key="PrimaryFontColor">Black</Color>
    <Color x:Key="DeemphasizedColor">#5A6570</Color>
    <Color x:Key="HeaderColor">#b4b2b0</Color>
    <Color x:Key="ListItemColor">#f9fafb</Color>

</ResourceDictionary>