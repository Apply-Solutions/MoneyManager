<?xml version="1.0" encoding="utf-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="MoneyFox.Presentation.Style.DarkTheme">

    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#FFFF8671</Color>
    <Color x:Key="PrimaryColor">#FF314A9B</Color>
    <Color x:Key="SecondaryColor">#FF00165A</Color>

    <!-- Control Colors -->
    <Color x:Key="WindowBackgroundColor">#201f1f</Color>
    <Color x:Key="DialogBackgroundColor">#3e3e42</Color>
    <Color x:Key="BottomTabBarColor">#3e3e42</Color>
    <Color x:Key="BarItemColor">#3e3e42</Color>
    <Color x:Key="BarSelectedItemColor">White</Color>
    <Color x:Key="FrameHighlightColor">#2d2d30</Color>
    <Color x:Key="ButtonBackgroundColor">#333333</Color>

    <!-- Font Colors -->
    <Color x:Key="InvertedPrimaryFontColor">Black</Color>
    <Color x:Key="PrimaryFontColor">White</Color>
    <Color x:Key="DeemphasizedColor">#b4b2b0</Color>
    <Color x:Key="HeaderColor">#5A6570</Color>
    <Color x:Key="ListItemColor">#2d2d30</Color>
    <Color x:Key="ListItemHighlightColor">#686868</Color>

</ResourceDictionary>